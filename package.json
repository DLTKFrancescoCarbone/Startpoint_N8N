{
  "name": "n8n-nodes-startpoint",
  "version": "0.1.0",
  "description": "N8N node for Startpoint ERP API integration",
  "keywords": [
    "n8n-community-node-package"
  ],
  "license": "MIT",
  "homepage": "https://github.com/DLTKFrancescoCarbone/Stratpoint_N8N",
  "author": {
    "name": "Francesco Carbone",
    "email": "FrancescoCarbone@Deltek.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DLTKFrancescoCarbone/Stratpoint_N8N.git"
  },
  "engines": {
    "node": ">=20.15"
  },
  "main": "index.js",
  "scripts": {
    "build": "npx rimraf dist && npx tsc && npx gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier nodes credentials --write",
    "lint": "eslint nodes credentials package.json",
    "lintfix": "eslint nodes credentials package.json --fix",
    "prepublishOnly": "npm run build && npm run lint -c .eslintrc.prepublish.js nodes credentials package.json",
    "docker:build": "npm run build && docker build -t startpoint-n8n .",
    "docker:run": "docker run -p 5678:5678 startpoint-n8n"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/StartpointApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Startpoint/Startpoint.node.js"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/parser": "~8.32.0",
    "eslint": "^8.57.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.3",
    "gulp": "^5.0.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  }
}